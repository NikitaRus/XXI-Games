    <%= f.label :description %>
    <%= f.text_area :description, :rows => 5 %>
  </div>
  <div class="field">
    <%= f.label :genre %>
    <%= f.select :genre, Game::GENRES%>
  </div>
  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :provider %>
    <%= f.text_field :provider %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
