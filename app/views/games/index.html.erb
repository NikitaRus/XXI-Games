<h1>Listing games</h1>

<%= render :partial => "sidebar" %>
<br />
<table class="common-table zebra-striped">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Genre</th>
    <th>Url</th>
    <th>Provider</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.description %></td>
    <td><%= game.genre %></td>
    <td><%= game.url %></td>
    <td><%= game.provider %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Game', new_game_path,:method => :get %>
